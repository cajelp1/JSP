<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board-Mapper">
	
	<select id="selectBoardByBno" parameterType="int" resultType="board">
		select
		*
		from board
		where bno=#{bno}
	</select>
	
	<sql id="search">
		<if test="searchType=='t'.toString()">
			and title like '%'||#{keyword}||'%'
		</if>
		<if test="searchType=='w'.toString()">
			and writer like '%'||#{keyword}||'%'
		</if>
	</sql>
	<select id="selectBoardCriteria" resultType="board">
		select * 
		from board
		where bno is not null
		<include refid="search" />
		order by regdate desc, bno
	</select>
	<select id="selectBoardCriteriaTotalCount" resultType="int">
		select count(*)
		from board
		where bno is not null
		<include refid="search" />
		order by regdate desc, bno
	</select>
	
	
	<update id="insertBoard" parameterType="board">
		insert into
		board(bno, title, writer, content)
		values(#{bno}, #{title},#{writer},#{content})
	</update>
	
	
	<update id="updateBoard" parameterType="board">
		update board
		set
		title=#{title},content=#{content},updatedate=sysdate
		where bno=#{bno}
	</update>
	
	
	<update id="deleteBoard" parameterType="int">
		delete
		from board
		where bno=#{bno}
	</update>
	
	<update id="increaseViewCnt" parameterType="int">
		update board
		set viewcnt=(viewcnt+1) 
		where bno = #{bno}
	</update>
	
	
	<select id="selectBoardSeqValue" resultType="int">
		select board_seq.nextval from dual
	</select>
	
	
</mapper>