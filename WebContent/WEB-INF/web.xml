<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <context-param>
    <param-name>memDao</param-name>
    <param-value>com.jsp.dao.MemberDaoImpl</param-value>
  </context-param>
  <context-param>
    <param-name>sessionFactory</param-name>
    <param-value>com.jsp.mybatis.OracleMyBatisSqlSessionFactory</param-value>
  </context-param>
  <listener>
    <listener-class>com.jsp.listener.InitListener</listener-class>
  </listener>
  <filter>
    <filter-name>setCharacterEncodingFilter</filter-name>
    <filter-class>
		org.apache.catalina.filters.SetCharacterEncodingFilter
	</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>setCharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>loginCheckFilter</filter-name>
    <filter-class>com.jsp.filter.LoginCheckFilter</filter-class>
    <init-param>
      <param-name>exclude</param-name>
      <param-value>resources,commons,.jsp</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>loginCheckFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>memberDisabledFilter</filter-name>
    <filter-class>com.jsp.filter.MemberDisabledFilter</filter-class>
    <init-param>
      <param-name>include</param-name>
      <param-value>regist,modify,remove,disabled,enabled</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>memberDisabledFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>sitemesh</filter-name>
    <filter-class>
		com.opensymphony.sitemesh.webapp.SiteMeshFilter
	</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>sitemesh</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.jsp.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/commons/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>com.jsp.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/commons/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>memberlist</servlet-name>
    <servlet-class>com.jsp.servlet.MemberListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>memberlist</servlet-name>
    <url-pattern>/member/list</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>memberRegist</servlet-name>
    <servlet-class>com.jsp.servlet.MemberRegistServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>memberRegist</servlet-name>
    <url-pattern>/member/regist</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>memberRemove</servlet-name>
    <servlet-class>com.jsp.servlet.MemberRemoveServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>memberRemove</servlet-name>
    <url-pattern>/member/remove</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>checkPassword</servlet-name>
    <servlet-class>com.jsp.servlet.CheckPassword</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>checkPassword</servlet-name>
    <url-pattern>/member/checkPassword</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>memberPicture</servlet-name>
    <servlet-class>com.jsp.servlet.UploadPictureServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>memberPicture</servlet-name>
    <url-pattern>/member/picture</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>getpicture</servlet-name>
    <servlet-class>com.jsp.servlet.GetPictureServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getpicture</servlet-name>
    <url-pattern>/member/picture/get</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/views/error/500_error.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/views/error/404_error.jsp</location>
  </error-page>
</web-app>